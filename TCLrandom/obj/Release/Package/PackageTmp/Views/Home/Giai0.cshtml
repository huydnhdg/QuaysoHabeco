@model IEnumerable<TCLrandom.Models.DS_QuayThuong>
@{
    ViewBag.Title = "SpinNumber";
    Layout = "~/Views/Shared/_LayoutTCL.cshtml";
    int StartIndex = Model.Count() + 1;
}
<div class="main-2 row">

    <div class="spin">
        <div class="col-md-3">
            <img src="~/image/SH.png" class="img-responsive" />
        </div>
        <div class="number col-md-6">
            <div class="spin-title">
                <h2>XE MÁY HONDA SH MODE CBS</h2>
                <p style="text-align:center;font-style:italic; font-size:21px;color:red;"><span>2 GIẢI QUAY 2 LẦN</span></p>
            </div>

            <ul>
                <li>
                    <p id="code0"></p>
                </li>
                <li>
                    <p id="code1"></p>
                </li>
                <li>
                    <p id="code2"></p>
                </li>
                <li>
                    <p id="code3"></p>
                </li>
                <li>
                    <p id="code4"></p>
                </li>
                <li>
                    <p id="code5"></p>
                </li>
                <li>
                    <p id="code6"></p>
                </li>
                <li>
                    <p id="code7"></p>
                </li>
                <li>
                    <p id="code8"></p>
                </li>
                <li>
                    <p id="code9"></p>
                </li>
            </ul>
        </div>
        <div class="col-md-2">
            <form id="myform" method="post">
                <fieldset>
                    <div class="form-group" style="display:none;">
                        <input type="text" name="giaithuong" id="giaithuong" value="0">
                    </div>
                    <div class="btn-spin form-group">
                        <button id="btnSend" type="button">
                            <img src="~/image/btn-spin.png" alt="" class="img-responsive" />
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="spin-list">

        <table class="winner table table-bordered table-inverse" id="table">
            <thead>
                <tr>
                    <th style="width:10%;">
                        STT
                    </th>
                    <th style="width:20%;">
                        MÃ DỰ THƯỞNG
                    </th>
                    <th style="width:20%;">
                        SỐ ĐIỆN THOẠI
                    </th>
                    <th style="width:20%;">
                        TÊN GIẢI THƯỞNG
                    </th>
                </tr>
            </thead>
            @if (Model != null)
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center;">@(--StartIndex)</td>
                            <td>@item.Code</td>
                            <td>@item.Phone</td>
                            <td>
                                Giải đặc biệt
                            </td>

                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tbody></tbody>
            }
        </table>
    </div>
</div>
